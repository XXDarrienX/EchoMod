			####### City Planets #######

entity = {
	name = "city_ruined_planet_01_entity"
	pdxmesh = "planet_clouded_mesh"

	#planet surface texture override	
	meshsettings = {
		name = "planet_geosphereShape"
		texture_diffuse = "city_planet_ruined_01_diffuse.dds"
		texture_normal = "city_planet_ruined_01_normal.dds"
		texture_specular = "city_planet_ruined_01_specular.dds"
		shader = "PdxMeshPlanetEmissive"
	}
	
	##cloud texture override
	meshsettings = {
		name = "clouds_geosphereShape"
		texture_diffuse = "city_ruined_clouds_diffuse.dds"
		texture_normal = "toxic_clouds_normal.dds"
		texture_specular = "toxic_clouds_specular.dds"
	}
	
	##cloud shadow texture override
	meshsettings = {
		name = "clouds_shadow_geosphereShape"
		texture_diffuse = "city_ruined_clouds_shadow_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}
		
	##pole texture override
	meshsettings = {
		name = "polesShape"
		texture_diffuse = "poles_tropical_1_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
	}
	
	default_state = "idle"
	state = { name = "idle" animation = "idle" time_offset = { 0 100 }
		start_event = { trigger_once = yes sound = { soundeffect = "spy_orb_destroyed" } }
	}
	
}

